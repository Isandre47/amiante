<form method="post" action="{{ path('mask_delete', {'id': mask.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mask.id) }}">
    <button class="btn">Delete</button>
</form>
