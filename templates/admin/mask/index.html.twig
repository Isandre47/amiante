{% extends 'admin/adminBase.html.twig' %}

{% block title %}Mask index{% endblock %}

{% block right %}
    <div class="container-fluid">
        <div class="row m-3" style="height: 10vh">
            <div class="col-12 text-center">
                <h1>Index des masques</h1>
            </div>
        </div>
    </div>
    <hr>
    <div class="row m-3">
        <table class="table table-striped table-hover   ">
            <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for mask in masks %}
                <tr>
                    <td>{{ mask.id }}</td>
                    <td>{{ mask.reference }}</td>
                    <td>{{ mask.status }}</td>
                    <td>
                        <a href="{{ path('mask_show', {'id': mask.id}) }}">show</a>
                        <a href="{{ path('mask_edit', {'id': mask.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('mask_new') }}">Create new</a>
    </div>
{% endblock %}
