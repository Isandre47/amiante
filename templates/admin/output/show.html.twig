{% extends 'admin/adminBase.html.twig' %}

{% block title %}Analyse finale {% endblock %}

{% block right %}
    <div class="container-fluid">
        <div class="row m-3" style="height: 10vh">
            <div class="col-12 text-center">
                <h1>Détails d'une analyse</h1>
            </div>
        </div>
    </div>
    <hr>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                Lieu de l'analyse:
                {{ output.location }} <br>
                Date:
                {{ output.date|format_date }} <br>
                Phase:
                {{ output.zone.name }} <br>
                Chantier:
                {{ output.zone.site.name }} <br>
            </div>
            <div class="col-4">
                zone à définir
            </div>
        </div>
    </div>
{% endblock %}