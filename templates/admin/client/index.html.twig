{% extends 'admin/adminBase.html.twig' %}

{% block title %}Index des clients{% endblock %}

{% block right %}
    <div class="container-fluid">
        <div class="row m-3" style="height: 10vh">
            <div class="col-12 text-center">
                <h1>Index des clients</h1>
            </div>
        </div>
    </div>
    <hr>
    <a href="{{ path('client_new') }}">Ajouter un client </a>
    <hr>
    <div class="row m-3">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <td>Client</td>
                    <td>Chantier attribu√©</td>
                    <td>Gestion</td>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.name }}</td>
                    <td>
                        {% for site in client.site %}
                            {{ site.name }}
                        {% endfor%}
                    </td>
                    <td>
                        <a href="{{ path('client_edit', { 'id': client.id }) }}">Editer</a>
                        <a href="{{ path('client_show', { 'id': client.id }) }}">Plus d'information</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
