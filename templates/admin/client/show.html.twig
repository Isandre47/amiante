{% extends 'admin/adminBase.html.twig' %}

{% block title %}Détail client{% endblock %}

{% block right %}
    <div class="row">
        <div class="col-6 shadow rounded">
            Client:
            {{ client.name }} <br>
            {{ client.user.firstname }} {{ client.user.lastname }} <br>
            <hr>
            {% for sites in client.site %}
                {{ sites.name }} <br>
                {% for zone in sites.zones %}
                    {{ zone.category.name }} <br>
                {% endfor %}
                <hr>
            {% endfor %}
        </div>
        <div class="col-4 offset-1 shadow rounded">
            zone à définir
        </div>
    </div>
{% endblock %}