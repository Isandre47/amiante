{% extends 'admin/adminBase.html.twig' %}

{% block title %}Index des analyses - retrait{% endblock %}

{% block right %}
    <div class="container-fluid">
        <div class="row m-3" style="height: 10vh">
            <div class="col-12 text-center">
                <h1>Index des analyses en cours de retrait</h1>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-6">
            <a href="{{ path('removal_new') }}">Ajouter une analyse</a>
            {% if removals is not empty %}
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <td>Lieu du prélèvement</td>
                        <td>Chantier</td>
                        <td>Phase</td>
                        <td>Date</td>
                        <td>Gérer</td>
                    </tr>
                </thead>
                <tbody>
                {% for removal in removals %}
                <tr data-type="{{ removal.id}}">
                    <td>{{ removal.location }}</td>
                    <td>{{ removal.zone.site.name }}</td>
                    <td>{{ removal.zone.category.name }}</td>
                    <td>{{ removal.date|format_date }}</td>
                    <td>
                        <a href="{{ path('removal_show', {'id' : removal.id}) }}">... plus de détails</a>
                    </td>
                </tr>
                </tbody>
                {% endfor %}
            </table>
            {% else %}
                Aucune analyse
            {% endif %}
        </div>
        <div id="info" class="col-4">
            toto
        </div>
    </div>
{% endblock %}
{% block script %}
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script>
        $( function () {
            $('tr').click(function () {
                var elemId = $(this).attr('data-type');
                console.log('tableau', elemId);
                $.ajax( {
                    type: 'POST',
                    url: 'show',
                    data: {
                        search: elemId
                    },
                    success: function(html) {
                        $('#info').html(html);
                    },
                    error: function (data) {
                        console.log('error');

                    }
                } );
            })
        })
    </script>
{% endblock %}