{% extends 'admin/adminBase.html.twig' %}

{% block title %}
    Index des chantiers
{% endblock %}

{% block right %}
    <div class="container-fluid">
        <div class="row m-3" style="height: 10vh">
            <div class="col-12 text-center">
                <h1>Index des chantiers</h1>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-6">
            <a href="{{ path('site_new') }}">Ajouter un chantier</a>
            {% if sites is not empty %}
            <table class="table">
                <thead>
                    <tr>
                        <td>Nom</td>
                        <td>Personnels</td>
                        <td>Gérer</td>
                    </tr>
                </thead>
                <tbody>
                {% for site in sites %}
                    <tr>
                        <td>{{ site.name }}</td>
                        <td>{{ site.users|length }}</td>
                        <td>
                            <a href="{{ path('site_edit',{'id':site.id}) }}">Editer</a> -
                            <a href="{{ path('show_site',{'id':site.id}) }}">Plus d'informations</a>
                        </td>
                    </tr>
                </tbody>
                {% endfor %}
            </table>
            {% else %}
                Aucun chantier d'enregistré
            {% endif %}
        </div>
        <div class="col-4">
            toto
        </div>
    </div>
{% endblock %}